{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build debug build",
      "type": "process",
      "command": [],
      "windows": {
        "command": "scripts/build_debug.bat"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "Build release build",
      "type": "process",
      "command": [],
      "windows": {
        "command": "scripts/build_release.bat"
      },
      "group": "build",
      "problemMatcher": "$msCompile"
    },
    {
      "label": "Cleanup build folders",
      "type": "process",
      "command": [],
      "windows": {
        "command": "scripts/clean.bat"
      },
      "group": "none",
      "problemMatcher": []
    },
    {
      "label": "Check editorconfig",
      "type": "process",
      "command": [],
      "windows": {
        "command": "scripts/editorconfig-checker.bat"
      },
      "group": "none",
      "problemMatcher": []
    },
    {
      "label": "Setup VSCode C++ extension initial configuration",
      "type": "process",
      "command": [],
      "windows": {
        "command": "scripts/configure_vscode_cpp.bat"
      },
      "group": "none",
      "problemMatcher": [],
      "runOptions": {
        "runOn": "folderOpen"
      },
      "presentation": {
        "echo": false,
        "reveal": "never",
        "panel": "shared",
        "showReuseMessage": false
      }
    }
  ]
}
